#!/usr/bin/env bash
# This displays num 1 to 20 and
# displays 4 then "bad luck from China"
# displays 9 then "bad luck from Japan"
# displays 17 then "bad luck from Italy"
counter=1
while [ $counter -le 20 ]
do
   echo $counter
   case $counter in
      4)
         echo "bad luck in China"
         ;;
      5)
         echo "bad luck in Japan"
         ;;
      6)
         echo "bad luck in Italy"
         ;;
   esac
   ((counter++))
done
